generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())
  widgets   widgets[]
}

model widgets {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  users            users              @relation(fields: [user_id], references: [id])
  user_id          String             @db.ObjectId
  name             String
  styles           Json?
  domains          String[]
  business_hours   Json[]
  timezone         String?
  exclude_pages    Json[]
  initial_delay    Int                @default(0)
  page_scroll      Int                @default(0)
  widget_behavior  Int                @default(1)
  custom_css       String?
  call_to_action   Json?
  store_responses  Boolean            @default(true)
  delete_responses Json?
  integrations     Json[]
  status           Boolean            @default(true)
  createdAt        DateTime           @default(now())
  widget_responses widget_responses[]
  widget_channels  widget_channels[]
}

model channels {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  icon            String
  default         Json?
  status          Boolean
  createdAt       DateTime          @default(now())
  widget_channels widget_channels[]
}

model widget_channels {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  widgets    widgets  @relation(fields: [widget_id], references: [id])
  widget_id  String   @db.ObjectId
  channels   channels @relation(fields: [channel_id], references: [id])
  channel_id String   @db.ObjectId
  config     Json?
  status     Boolean  @default(true)
  createdAt  DateTime @default(now())
}

model widget_responses {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  widgets   widgets  @relation(fields: [widget_id], references: [id])
  widget_id String   @db.ObjectId
  response  Json
  createdAt DateTime @default(now())
}
